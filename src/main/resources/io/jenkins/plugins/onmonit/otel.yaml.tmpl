receivers:
  hostmetrics:
    collection_interval: 10s
    scrapers:
      cpu:
      disk:
      filesystem:
      load:
      memory:
      network:
      paging:
exporters:
  logging:
    loglevel: debug
  otlp:
    endpoint: "[[${otlpEndpoint}]]"
    headers:
      Authorization: "[[${otlpAuthHeader}]]"

processors:
  resourcedetection:
    detectors:
    - system
    - ec2
  resource/ci:
    attributes:
    - action: insert
      key: ci.url
      value: "[[${JENKINS_URL}]]"
    - action: insert
      key: ci.job.name
      value: "[[${env.JOB_NAME}]]"
    - action: insert
      key: ci.job.id
      value: "[[${env.BUILD_ID}]]"
    - action: insert
      key: service.name
      value: "[[${serviceName}]]"
  batch:
    send_batch_size: 10000
    timeout: 10s

service:
  telemetry:
    metrics:
      level: none
  pipelines:
    metrics:
      receivers: [hostmetrics]
      processors: [resourcedetection, resource/ci] # [batch, resourcedetection]
      exporters: [otlp, logging]
