receivers:
  prometheus/ci:
    config:
      scrape_configs:
        - job_name: 'otl-col-ci'
          scrape_interval: 15s
          static_configs:
            - targets: ['localhost:9100']
exporters:
  logging:
    loglevel: debug
  otlp:
    endpoint: "[[${otlpEndpoint}]]"
    headers:
      Authorization: "[[${otlpAuthHeader}]]"

processors:
  resourcedetection:
    detectors:
    - system
    - ec2
  resource/ci:
    attributes:
    - action: insert
      key: ci.url
      value: "[[${JENKINS_URL}]]"
    - action: insert
      key: ci.job.name
      value: "[[${jobName}]]"
    - action: insert
      key: ci.job.groupname
      value: "[[${jobGroupName}]]"
    - action: insert
      key: ci.job.id
      value: "[[${env.BUILD_ID}]]"
    - action: insert
      key: service.name
      value: "[[${serviceName}]]"
  batch:
    send_batch_size: 10000
    timeout: 10s

service:
  telemetry:
    metrics:
      level: none
  pipelines:
    metrics:
      receivers: [prometheus/ci]
      processors: [resourcedetection, resource/ci] # [batch, resourcedetection]
      exporters: [otlp, logging]
